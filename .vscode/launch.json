{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Start",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
